Public m_NomDuSort As String
Public m_NiveauDuSort As Integer
Public m_NiveauMaxDuSort As Integer
Public m_NiveauMetamagie As Integer

Private Sub chkMetamagie_Click(Index As Integer)
Dim i As Integer
Dim total As Integer

total = 0
For i = 0 To 15
  total = total + Val(chkMetamagie(i)) * Val(chkMetamagie(i).Tag)
Next i
lblNiveauMetamagie = "Niveau du sort modifié : " & m_NiveauDuSort + total
End Sub

Private Sub btnOk_Click()
Dim i As Integer
Dim total As Integer
Dim strlig As String

total = 0
strlig = ""
For i = 0 To 15
  If chkMetamagie(i) Then
    total = total + Val(chkMetamagie(i).Tag)
    If strlig <> "" Then
      strlig = strlig & ", "
    End If
    strlig = strlig & Trim(chkMetamagie(i).Caption)
  End If
Next i
If total + m_NiveauDuSort > m_NiveauMaxDuSort Then
  MsgBox "Niveau de sort trop élevé"
  Exit Sub
End If
frmFichePerso.m_NiveauMetamagie = total + m_NiveauDuSort
frmFichePerso.m_Metamagie = strlig
Unload Me
End Sub

Private Sub Form_Load()
Dim i As Integer, j As Integer, k As Integer, l As Integer
Dim AjustementMetamagie  As Integer

lblNomSort = m_NomDuSort
lblNiveauMetamagie = m_NiveauMetamagie
lblNiveau = "Niveau " & m_NiveauDuSort
lblNiveauMetamagie = "Niveau du sort modifié : " & m_NiveauDuSort
lblNiveauMax = "Niveau de sort maximum : " & m_NiveauMaxDuSort
For i = 0 To 15
  chkMetamagie(i).Width = 1500
  chkMetamagie(i).Height = 500
  chkMetamagie(i).left = 120 + (i Mod 4) * 1800
  chkMetamagie(i).top = 700 + Int(i / 4) * 700
Next i
j = 0
With frmFichePerso.vsDon
  For i = 1 To .Rows - 1
    If .Cell(flexcpText, i, L5_COL_DON_GENRE) = "Métamagie" Then
      Set rstMetamagie = g_bdRoles.OpenRecordset("select * from Metamagie where nom='" & FormatStrSQL(.Cell(flexcpText, i, L5_COL_DON)) & "' order by Nom", dbOpenDynaset)
      If rstMetamagie!Niveau <> 0 Then
        AjustementMetamagie = maxi_(1, rstMetamagie!Niveau - m_NiveauMetamagie)
      Else
        AjustementMetamagie = 0
      End If
      If .Cell(flexcpText, i, L5_COL_DON) = "Augmentation dintensité  " Then
        k = m_NiveauMaxDuSort - m_NiveauDuSort
      Else
        k = 0
      End If
      For l = 0 To maxi_(0, k - 1)
        chkMetamagie(j + l).Visible = True
        chkMetamagie(j + l).Width = 1500
        chkMetamagie(j + l).Height = 500
        chkMetamagie(j + l).left = 120 + ((j + l) Mod 4) * 1800
        chkMetamagie(j + l).top = 700 + Int((j + l) / 4) * 700
        chkMetamagie(j + l).Caption = Trim(.Cell(flexcpText, i, L5_COL_DON)) & IIf(k - l <> 0, " (" & k - l & ")", "")
        chkMetamagie(j + l).Tag = AjustementMetamagie + k - l
        chkMetamagie(j + l).ToolTipText = "Ajustement de l'emplacement de sort : " & AjustementMetamagie + k - l
      Next l
      rstMetamagie.Close
      j = j + 1 + maxi_(0, k - 1)
    End If
  Next i
End With
End Sub
