<UserControl x:Class="RoleDDNG.Role.UserControls.DiceRollUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RoleDDNG.Role.UserControls"
             xmlns:vm="clr-namespace:RoleDDNG.ViewModels;assembly=ViewModels"
             xmlns:converters="clr-namespace:RoleDDNG.Role.Converters"
             DataContext="{Binding Source={StaticResource Locator}, Path=DiceRoll}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ListOfIntsToStringConverter x:Key="ListOfIntsToStringConverter" />
    </UserControl.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Margin="5" Grid.Row="0" Grid.Column="0">Nombre de dés</Label>
        <TextBox Margin="5" Grid.Row="0" Grid.Column="1" Text="{Binding NumberOfDices, Mode=TwoWay}"></TextBox>
        <Label Margin="5" Grid.Row="1" Grid.Column="0">Type de dés</Label>
        <ComboBox Margin="5" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding DiceTypes}" SelectedValue="{Binding NumberofSides, Mode=TwoWay}"></ComboBox>
        <Button Margin="5" MinWidth="147" MinHeight="54" Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Command="{Binding Roll}">
            <Image Stretch="Fill" Source="Assets/diceButton.png" />
        </Button>
        <Label Margin="5" Grid.Row="2" Grid.Column="0" TextBlock.FontWeight="ExtraBold">Résultat</Label>
        <TextBox Margin="5" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" TextWrapping="Wrap" Text="{Binding Results, Mode=OneWay, Converter={StaticResource ListOfIntsToStringConverter}}"></TextBox>
    </Grid>
</UserControl>