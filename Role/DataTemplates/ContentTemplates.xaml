<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="clr-namespace:RoleDDNG.Role.UserControls"
    xmlns:rulesVms="clr-namespace:RoleDDNG.ViewModels.Menus.Rules;assembly=ViewModels"
    xmlns:toolsVms="clr-namespace:RoleDDNG.ViewModels.Menus.Tools;assembly=ViewModels">

    <DataTemplate DataType="{x:Type toolsVms:DiceRollViewModel}">
        <uc:DiceRollUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type toolsVms:TownGeneratorViewModel}">
        <uc:TownGeneratorUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type toolsVms:OpenCharacterViewModel}">
        <uc:OpenCharacterUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type toolsVms:CharactersXpViewModel}">
        <uc:CharactersXpUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type rulesVms:RacesDescriptionsViewModel}">
        <uc:RacesDescriptionsControl />
    </DataTemplate>
</ResourceDictionary>