    xmlns:toolsVms="clr-namespace:RoleDDNG.ViewModels.ToolsVMs;assembly=ViewModels">

    <DataTemplate DataType="{x:Type toolsVms:DiceRollViewModel}">
        <uc:DiceRollUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type toolsVms:TownGeneratorViewModel}">
        <uc:TownGeneratorUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type toolsVms:OpenCharacterViewModel}">
        <uc:OpenCharacterUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type toolsVms:CharactersXpViewModel}">
        <uc:CharactersXpUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type descsVms:RacesDescriptionsViewModel}">
        <uc:RacesDescriptionsControl />
    </DataTemplate>
</ResourceDictionary>