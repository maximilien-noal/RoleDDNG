    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="clr-namespace:RoleDDNG.Role.UserControls"
    xmlns:vm="clr-namespace:RoleDDNG.ViewModels.ToolsVMs;assembly=ViewModels">

    <DataTemplate DataType="{x:Type vm:DiceRollViewModel}">
        <uc:DiceRollUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:TownGeneratorViewModel}">
        <uc:TownGeneratorUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:OpenCharacterViewModel}">
        <uc:OpenCharacterUserControl />
    </DataTemplate>
</ResourceDictionary>