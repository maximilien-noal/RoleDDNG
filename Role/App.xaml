<Application x:Class="RoleDDNG.Role.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RoleDDNG.ViewModels;assembly=ViewModels"
             xmlns:local="clr-namespace:RoleDDNG.Role"
             StartupUri="MainWindow.xaml"
    xmlns:Control="clr-namespace:Hammer.MDIContainer.Control;assembly=Hammer.MDIContainer.Control">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DataTemplates/ContentTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <vm:ViewModelLocator x:Key="Locator" />
            <SolidColorBrush x:Key="ContainerBackground" Color="Transparent" />
            <SolidColorBrush x:Key="ContainerBorder" Color="Transparent" />
            <Style TargetType="{x:Type Control:MdiContainer}">
                <Setter Property="IsTabStop" Value="False" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Control:MdiContainer}">
                            <ItemsPresenter ClipToBounds="False" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <Canvas
                                Width="{Binding RelativeSource={RelativeSource AncestorType=Control:MdiContainer}, Path=ActualWidth}"
                                Height="{Binding RelativeSource={RelativeSource AncestorType=Control:MdiContainer}, Path=ActualHeight}"
                                Background="{StaticResource ContainerBackground}" ClipToBounds="False" IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>