<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp31</TargetFramework>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <UseWPF>true</UseWPF>
    <RootNamespace>RoleDDNG.Role</RootNamespace>
    <ApplicationIcon>Assets\appicon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\appicon.png" />
    <None Remove="Assets\back.png" />
    <None Remove="Assets\splashscreen.png" />
    <None Remove="UserControls\Assets\diceButton.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\appicon.png" />
    <Resource Include="Assets\back.png" />
    <Resource Include="Assets\splashscreen.png" />
    <Resource Include="UserControls\Assets\diceButton.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.7">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Models\Models.csproj" />
    <ProjectReference Include="..\ViewModels\ViewModels.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Hammer.MDIContainer.Control">
      <HintPath>..\Libs\Hammer.MDIContainer.Control.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>